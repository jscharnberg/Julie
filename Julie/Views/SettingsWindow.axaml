<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
		        xmlns:vm="using:Julie.ViewModels"
        x:DataType="vm:SettingsViewModel"
		xmlns:local="using:Julie.Converter"
        Width="800" Height="500"
        x:Class="Julie.Views.SettingsWindow"
        Title="Settings">

	<Window.Resources>
		<local:ResourceConverter x:Key="Res"/>
	</Window.Resources>
	
	<StackPanel Margin="20" Spacing="10">
		<ComboBox ItemsSource="{Binding AvailableThemes}"
                      SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                      Width="150"/>
		<ComboBox ItemsSource="{Binding AvailableLanguages}" SelectedItem="{Binding SelectedLanguage}" />
		<TextBlock Text="SeriLog Template:"/>
		<TextBox Text="{Binding Template}" AcceptsReturn="True" Height="100" TextWrapping="Wrap"/>

		<StackPanel Orientation="Horizontal" Spacing="10">
			<Button Content="Speichern" Command="{Binding Save}"/>
		</StackPanel>

		<!--<TextBlock Text="Sprache:"/>
		<ComboBox ItemsSource="{Binding AvailableLanguages}" SelectedItem="{Binding SelectedLanguage}"/>
		<Button Content="Ãœbernehmen" Command="{Binding ChangeLanguage}"/>-->
	</StackPanel>
</Window>
