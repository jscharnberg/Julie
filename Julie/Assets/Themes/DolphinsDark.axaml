<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Farben -->
	<Color x:Key="WindowBackgroundColor">#002C56</Color>
	<Color x:Key="WindowForegroundColor">#FFFFFF</Color>
	<Color x:Key="CursorColor">#FC4C02</Color>
	<Color x:Key="LineHighlightColor">#003A6E</Color>
	<Color x:Key="SelectionColor">#008E97</Color>
	<Color x:Key="BorderColor">#1c2630</Color>

	<SolidColorBrush x:Key="WindowBackgroundBrush" Color="{DynamicResource WindowBackgroundColor}"/>
	<SolidColorBrush x:Key="WindowForegroundBrush" Color="{DynamicResource WindowForegroundColor}"/>
	<SolidColorBrush x:Key="CursorBrush" Color="{DynamicResource CursorColor}"/>
	<SolidColorBrush x:Key="LineHighlightBrush" Color="{DynamicResource LineHighlightColor}"/>
	<SolidColorBrush x:Key="SelectionBrush" Color="{DynamicResource SelectionColor}"/>
	<SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BorderColor}"/>

	<Color x:Key="LogInfoColor">#1b7784</Color>
	<Color x:Key="LogErrorColor">#e6721d</Color>

	<SolidColorBrush x:Key="LogInfoBrush" Color="{DynamicResource LogInfoColor}" />
	<SolidColorBrush x:Key="LogErrorBrush" Color="{DynamicResource LogErrorColor}" />

</ResourceDictionary>
